<div class="relative" data-controller="carousel">
  <div class="absolute left-0 bottom-0 top-0 flex items-center">
    <button data-action="click->carousel#previous" type="button" class="rounded-full bg-gray-300 z-50">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
      </svg>
    </button>
  </div>
  <div class="absolute right-0 bottom-0 top-0 flex items-center">
    <button data-action="click->carousel#next" type="button" class="rounded-full bg-gray-300 z-50">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
      </svg>
    </button>
  </div>
  <% @tour.photos.each_with_index do |photo, idx| %>
    <div data-carousel-target="image" class="<%= idx > 0 ? "hidden" : nil %>">
      <%=
        turbo_frame_tag "photo-#{photo.id}",
                        class: "absolute top-0 left-0 right-0 bottom-0",
                        src: photo.url,
                        loading: :lazy
      %>
      <%= image_tag photo, alt:"", class:"w-full rounded-2xl object-cover z-20"%>
    </div>
  <% end %>
</div>
