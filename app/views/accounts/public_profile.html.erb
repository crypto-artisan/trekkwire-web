          <% end %>

          <% if @account.x_social.present? %>
            <a href=<%= @account.x_social %> class="text-gray-400 hover:text-gray-500">
              <span class="sr-only">Twitter</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
              </svg>
            </a>
          <% end %>

          <% if @account.youtube_social.present? %>
            <a href=<%= @account.youtube_social %> class="text-gray-400 hover:text-gray-500">
              <span class="sr-only">YouTube</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M19.812 5.418c.861.23 1.538.907 1.768 1.768C21.998 8.746 22 12 22 12s0 3.255-.418 4.814a2.504 2.504 0 0 1-1.768 1.768c-1.56.419-7.814.419-7.814.419s-6.255 0-7.814-.419a2.505 2.505 0 0 1-1.768-1.768C2 15.255 2 12 2 12s0-3.255.417-4.814a2.507 2.507 0 0 1 1.768-1.768C5.744 5 11.998 5 11.998 5s6.255 0 7.814.418ZM15.194 12 10 15V9l5.194 3Z" clip-rule="evenodd" />
              </svg>
            </a>
          <% end %>
        </div>
      </div>

      <div class="lg:col-span-3 px-4 py-5 divide-y">
        <div>
          <h4 class="py-2">About Me</h4>
          <p class="pb-8">
            <%= @account.description %>
          </p>
        </div>
        <div>
          <h4 class="pt-6 pb-2">Languages</h4>
          <div class="pb-8">
            <% @account.languages.each do |language| %>
              <button type="button" class="rounded-full bg-white px-2.5 py-1 text-xs font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"><%= language.name %></button>
            <% end %>
          </div>
        </div>
        <div>
          <h4 class="pt-6 pb-2">Activities</h4>
            <% @account.activities.each do |activity| %>
              <button type="button" class="rounded-full bg-white px-2.5 py-1 text-xs font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"><%= activity.name %></button>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="bg-gray-700 py-6 sm:py-6">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="max-w-2xl">
      <h2 class="text-2xl font-bold tracking-tight text-white sm:text-2xl">Available Tours</h2>
    </div>
    <ul role="list" class="list-none pb-4 mx-auto mt-6 grid max-w-2xl grid-cols-1 gap-6 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-4 lg:gap-8">
      <% @account.tours.each do |t| %>
        <li class="rounded-2xl bg-gray-800 px-8 py-10">
          <div class="mx-auto rounded-full">
            <%= render partial: 'carousel', locals: {photos: t.photos, size_x: 1000, size_y: 1000} %>
          </div>
          <h3 class="mt-6 text-base font-semibold leading-7 tracking-tight text-white"><%= t.title %></h3>
          <p class="text-sm leading-6 text-gray-400"><%= t.tagline %></p>
          <p class="text-sm leading-6 text-gray-400">Cost: <%= number_to_currency(t.price) %></p>
          <p class="text-sm leading-6 text-gray-400">Duration: <%= t.duration %> hours</p>
          <div class="flex items-center justify-center pt-4">
            <%= link_to "Book Now!", new_scheduled_tour_path(tour_id: t.id), class: "btn btn-gray bg-opacity-50" %>
          </div>
        </li>
      <% end %>
    </ul>
    <div class="text-right">
      <%= link_to 'See More', guide_tours_path(guide_id: @account.id), class:"font-bold tracking-tight text-white"%>
    </div>
  </div>
</div>
<% else %>
  This profile is not available.
<% end %>
