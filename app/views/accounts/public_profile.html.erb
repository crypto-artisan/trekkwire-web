<% if (@account && @account.customer_type == "guide" && !@account.operating_location.nil?) || current_account == @account %>
<div class="overflow-hidden rounded-lg bg-white shadow pb-6">
  <div class="px-4 py-5 sm:px-6">
    <div class="pb-5 lg:py-5 lg:px-20 sm:flex sm:items-center sm:justify-between">
      <div>
        <h3 class="text-base font-semibold leading-6 text-gray-900"><%= @account.tagline %></h3>
        <p class="mt-2 max-w-4xl text-xs text-gray-500"><%= @account.operating_location.address %></p>
      </div>
      <div class="mt-3 flex sm:ml-4 sm:mt-0">
        <%
=begin%>
 <%= link_to "Book Now", guide_tours_path(@account.id), class:"inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %> 
<%
=end%>
