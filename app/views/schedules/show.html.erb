<%= content_for :title, "Schedules ##{@schedule.id}" %>
<%= turbo_stream_from @schedule %>

<div class="container mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Schedules", schedules_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Schedule #<%= @schedule.id %>
    </h1>
    <%= link_to t("edit"), edit_schedule_path(@schedule), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @schedule %>
  </div>
</div>
