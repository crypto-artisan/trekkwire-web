<%= content_for :title, "Account Ratings ##{@account_rating.id}" %>
<%= turbo_stream_from @account_rating %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Account Ratings", account_ratings_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Account Rating #<%= @account_rating.id %>
    </h1>
    <%= link_to t("edit"), edit_account_rating_path(@account_rating), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @account_rating %>
  </div>
</div>
