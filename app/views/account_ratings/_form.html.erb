<%= form_with(model: account_rating) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :target_account_id %>
    <%= form.text_field :target_account_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :source_account_id %>
    <%= form.text_field :source_account_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :review %>
    <%= form.text_area :review, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rating %>
    <%= form.text_field :rating, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), account_ratings_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), account_rating_path(@account_rating), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
