<% if current_account.customer_type == "traveler" %>
  <%= render partial: 'dashboard/traveler_dashboard' %>
<% else %>
<div class="px-4 sm:px-6 lg:px-8">
  <h1 class="mt-3 text-3xl font-extrabold tracking-tight text-slate-900"><%= t(".title_guide") %></h1>
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <% unless current_account.approved %>
          <%= badge t(".not_approved"), class: "bg-red-100 text-red-800 text-xs font-medium" %>
          <a href = "mailto: support@trekkwire.com" class="rounded bg-indigo-50 px-2 py-1 text-xs font-semibold text-indigo-600 shadow-sm hover:bg-indigo-100">Email</a>
          <a href = "tel: +1(805)530-8336" class="rounded bg-indigo-50 px-2 py-1 text-xs font-semibold text-indigo-600 shadow-sm hover:bg-indigo-100">Call or Text +1(805)530-8336</a>
          <a href="//api.whatsapp.com/send?phone=33745399653&text=Please approve my guide account" class="rounded bg-indigo-50 px-2 py-1 text-xs font-semibold text-indigo-600 shadow-sm hover:bg-indigo-100"> or WhatsApp Me +3(374)539-9653</a>
        <% end %>
        <% unless current_account.active %>
          <div class="my-2">
            <%= badge t(".not_active"), class: "bg-orange-100 text-black-800 text-xs font-medium" %>
            <%= link_to "Go Live", edit_account_path(current_account), class: "rounded bg-indigo-50 px-2 py-1 text-xs font-semibold text-indigo-600 shadow-sm hover:bg-indigo-100"%>
          </div>
        <% end %>
      </div>
    </div>
    <%= link_to "Current Account: " + current_account.name, current_account, class: "rounded bg-gray-50 px-2 py-1 text-xs font-semibold text-black shadow-sm hover:bg-indigo-100" %>
    <%= link_to "View My Public Profile", public_profile_path(current_account), class: "rounded bg-indigo-50 px-2 py-1 text-xs font-semibold text-indigo-600 shadow-sm hover:bg-indigo-100" %>
    <% if current_user == current_account.owner%>
      <%= link_to "Set My Availability", schedules_path, class: "rounded bg-yellow-500 px-2 py-1 text-xs font-semibold text-black shadow-sm hover:bg-indigo-100" %>
    <% end %>
  </div>
  <div class="my-10">
    <%= render partial: 'dashboard/guide_dashboard' %>
  </div>
</div>
<% end %>